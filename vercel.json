{
  "buildCommand": "pnpm install && pnpm --filter @aileader/shared build && pnpm --filter @aileader/web build",
  "outputDirectory": "apps/web/dist",
  "functions": {
    "api/index.ts": {
      "includeFiles": "apps/api/**,packages/shared/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}